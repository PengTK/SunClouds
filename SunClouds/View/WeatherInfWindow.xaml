                        x:Name="scrollViewer"  VerticalScrollBarVisibility="Hidden"
                                  MouseLeftButtonDown="OnMouseLeftButtonDown" MouseLeftButtonUp="OnMouseLeftButtonUp" MouseMove="OnMouseMove">

                        <Grid Background="{DynamicResource Primary}">
                            <Grid.Effect>
                                <DropShadowEffect Direction="270" ShadowDepth="5" Color="Black" Opacity="0.3"/>
                            </Grid.Effect>


                            <WrapPanel Orientation="Horizontal" Margin="3">
