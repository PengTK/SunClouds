<Window x:Class="SunClouds.View.WeatherInfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunClouds.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WeatherInfWindow" Height="450" Width="800" MinHeight="274" MinWidth="438" 
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        FontFamily="./Jura-Regular.ttf#Jura">

    <Window.Resources>

        <Style x:Key="TabItemStyle1" TargetType="TabItem">
            <Setter Property="Foreground" Value="{DynamicResource Focus}"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Jura-Regular.ttf#Jura"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="{DynamicResource Focus}" >
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="TabItemStyle2" TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Jura-Regular.ttf#Jura"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="White">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="{DynamicResource BG}"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.RowSpan="2" Background="{DynamicResource Primary}">
            <TabControl Grid.RowSpan="2">

                <TabItem  Style="{DynamicResource TabItemStyle1}" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="25" >
                    <TabItem.Header>
                        <TextBlock Text="{Binding City, Mode=OneWay}" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                    </TabItem.Header>
                    <Grid>

                        <Grid HorizontalAlignment="Left" Margin="25,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="2.8*"/>
                                <RowDefinition Height="2.8*"/>
                                <RowDefinition Height="2.8*"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="15"/>
                                <!-- <RowDefinition Height="90"/>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="*"/> -->
                            </Grid.RowDefinitions>
                            <Image Grid.Column="1" Source="/WeatherIcons/Sunny.png" Width="90" Height="90" Panel.ZIndex="2"/>
                            <Image Grid.Column="1" Grid.Row="1" Source="/WeatherIcons/Sunny.png" Width="45" Height="45" Margin="0,35,0,0" Panel.ZIndex="3"/>
                            <Image Grid.Column="1" Grid.Row="2" Source="/WeatherIcons/Cloudy.png" Width="45" Height="45" Margin="0,35,0,0" Panel.ZIndex="4"/>
                            <Image Grid.Row="3" Grid.Column="1" Source="/WeatherIcons/Rainy.png" Width="45" Height="45" Margin="0,35,0,0" Panel.ZIndex="5"/>
                            <Image Grid.Column="1" Grid.RowSpan="6" Source="/WeatherIcons/Line.png" Width="7"  Panel.ZIndex="1" Margin="0,35,0,0"/>
                        </Grid>

                    </Grid>
                </TabItem>

            </TabControl>
        </Border>

        <GridSplitter IsEnabled="False" Grid.Column="1" Grid.RowSpan="3" BorderThickness="0.5" BorderBrush="DarkGray"/>

        <Border Grid.ColumnSpan="3" Background="Transparent"
                    MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Grid.Column="1"  Width="35" Height="30" Background="Transparent" BorderThickness="0"
                                Click="ButtonMinimize_Click" Cursor="Hand">
                        <Image Source="{DynamicResource LineImage}" Width="25" />
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="1"  Width="35" Height="30" Background="Transparent" BorderThickness="0"
                                Click="WindowStateButton_Click">
                        <Image Source="{DynamicResource SquareImage}" Width="25"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button  Width="35" Height="30" Background="Transparent" BorderThickness="0"
                                 Click="CloseButton_Click">
                        <Image Source="{DynamicResource KrestImage}" />
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>

        <TabControl Grid.Row="1" Grid.Column="2">

            <TabItem  Style="{DynamicResource TabItemStyle2}"  FontSize="25" HorizontalAlignment="Left" Margin="20,0,0,0">
                <TabItem.Header>
                    <TextBlock Text="Погода                         " HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </TabItem.Header>

                <Grid>
                    <TextBlock Text="Тута погода будет" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40"/>
                </Grid>

            </TabItem>

            <TabItem  Style="{DynamicResource TabItemStyle2}" HorizontalAlignment="Right" FontSize="25" Margin="0,0,20,0">
                <TabItem.Header>
                    <TextBlock Text="                    Настройки" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </TabItem.Header>

                <Grid>
                    <TextBlock Text="Тута настройки будут" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40"/>
                </Grid>
            </TabItem>



        </TabControl>
    </Grid>
</Window>
