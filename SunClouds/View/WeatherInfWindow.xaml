                        <Image Source="{DynamicResource LineImage}" Width="25" />
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Grid.Column="1"  Width="35" Height="30" Background="Transparent" BorderThickness="0"
                                Click="WindowStateButton_Click">
                        <Image Source="{DynamicResource SquareImage}" Width="25"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button  Width="35" Height="30" Background="Transparent" BorderThickness="0"
                                 Click="CloseButton_Click">
                        <Image Source="{DynamicResource KrestImage}" />
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
        <TabControl Grid.Row="1" Grid.Column="2">
            <TabItem Style="{DynamicResource TabItemStyle2}" FontSize="25" HorizontalAlignment="Left" Margin="20,0,0,0">
                <TabItem.Header>
                    <TextBlock Text="Погода                        " HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </TabItem.Header>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="152"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Border x:Name="WeatherPanel" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="20,5,20,10">

                        <Border.Effect>
                            <DropShadowEffect Direction="270" ShadowDepth="5" Color="Black" Opacity="0.3"/>
                        </Border.Effect>

                        <Grid x:Name="SunniGrid" Background="{DynamicResource Primary}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="70"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition MinWidth="100"/>
                                <ColumnDefinition MinWidth="60" Width="60"/>
                                <ColumnDefinition MinWidth="60" Width="60"/>
                                <ColumnDefinition MinWidth="130"/>
                                <ColumnDefinition MinWidth="110"/>
                                <ColumnDefinition MinWidth="100"/>
                                <ColumnDefinition MinWidth="80"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.RowSpan="2"  HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="50" Text="21°" Foreground="{DynamicResource Focus}"/>

                            <Rectangle Grid.Column="1" Grid.RowSpan="2" Width="1" Fill="White" Stroke="White" StrokeThickness="1" Margin="0,10,0,10" IsHitTestVisible="False"/>

                            <TextBlock Grid.Column="2" Text="Ощущение:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"  />
                            <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Feels}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>

                            <TextBlock Grid.Column="3" Text="Мин." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
                            <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding MinTempa}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>

                            <TextBlock Grid.Column="4" Text="Макс." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="4" Grid.Row="1" Text="{Binding MaxTempa}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>

                            <TextBlock Grid.Column="5" Text="Давление:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
                            <TextBlock Grid.Column="5" Grid.Row="1" Text="{Binding Pressure}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>

                            <TextBlock Grid.Column="6" Text="Влажность:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                            <TextBlock Grid.Column="6" Grid.Row="1" Text="{Binding Humidity}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>

                            <TextBlock Grid.Column="7" Text="Ветер м\c:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                            <TextBlock Grid.Column="7" Grid.Row="1" Text="{Binding Wind}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>


                            <TextBlock Grid.Column="8" Text="Ветер °:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                            <TextBlock Grid.Column="8" Grid.Row="1" Text="{Binding WindTemp}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,15" FontWeight="Thin"/>



                        </Grid>
                    </Border>




